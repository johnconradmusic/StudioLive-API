<UserControl x:Class="Presonus.StudioLive32.Wpf.UserControls.MiniRotaryControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:local1="clr-namespace:Presonus.StudioLive32.Wpf.UserControls"
             mc:Ignorable="d"
             d:DesignHeight="20" d:DesignWidth="50">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <local1:RotaryKnobControl x:Name="MiniRotaryKnob" Grid.Column="0" Size="16" Value="{Binding ElementName=MiniRotaryControl, Path=Value, Mode=TwoWay}" />
        <TextBlock x:Name="MiniRotaryText" Grid.Column="1" Text="{Binding ElementName=MiniRotaryControl, Path=Text}" VerticalAlignment="Center" Margin="0,0,5,0" />
    </Grid>
</UserControl>
