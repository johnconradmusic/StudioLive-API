<UserControl x:Class="Presonus.StudioLive32.Wpf.UserControls.ScribbleStripControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="30" d:DesignWidth="50">
    <Grid>
        <Border x:Name="ScribbleStripBackground" Background="{Binding ElementName=ScribbleStripControl, Path=StripColor}" CornerRadius="5" Padding="5">
            <TextBlock x:Name="ScribbleStripText" Text="{Binding ElementName=ScribbleStripControl, Path=Text}" FontSize="4" FontWeight="Bold" Foreground="Black" />
        </Border>
    </Grid>
</UserControl>
