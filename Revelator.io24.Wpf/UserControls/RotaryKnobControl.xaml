<UserControl x:Class="Presonus.StudioLive32.Wpf.UserControls.RotaryKnobControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="50" d:DesignWidth="50">
    <Grid x:Name="LayoutRoot" Width="50" Height="50">
        <Ellipse x:Name="Knob" Stroke="Black" StrokeThickness="1" Fill="LightGray" />
        <Rectangle x:Name="Indicator" Fill="Black" Width="2" Height="12" HorizontalAlignment="Center" VerticalAlignment="Center" >
            <Rectangle.RenderTransform>
                <TranslateTransform X="0" Y="-4"/>
            </Rectangle.RenderTransform>
        </Rectangle>
    </Grid>
</UserControl>