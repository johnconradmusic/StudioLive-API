<UserControl x:Class="Presonus.UCNet.Wpf.UserControls.EnumComboBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Presonus.UCNet.Wpf.UserControls"
             mc:Ignorable="d">
    <ComboBox x:Name="ComboBox" SelectedItem="{Binding SelectedEnumValue, RelativeSource={RelativeSource AncestorType=UserControl}, Mode=TwoWay}" />
</UserControl>
