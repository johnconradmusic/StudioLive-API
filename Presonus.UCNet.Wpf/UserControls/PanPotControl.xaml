<UserControl x:Class="Presonus.UCNet.Wpf.UserControls.PanPotControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:Presonus.UCNet.Wpf.UserControls"
             mc:Ignorable="d" x:Name="PanPot"
             MinWidth="60" Height="30" IsTabStop="True" Focusable="True" MouseWheel="RotaryKnob_MouseWheel" MouseDown="Knob_MouseDown" MouseMove="Knob_MouseMove" MouseUp="Knob_MouseUp" MouseLeave="Knob_MouseLeave">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Image RenderOptions.BitmapScalingMode="HighQuality" Source="/Assets/Images/knob-big-base.png" Width="30" Height="30"/>
        <Image RenderOptions.BitmapScalingMode="HighQuality" Source="/Assets/Images/knob-big-indicator.png" Width="30" Height="30">
            <Image.RenderTransform>
                <RotateTransform x:Name="KnobRotateTransform"
                                 Angle="30" 
                                 CenterX="15" CenterY="15"/>
            </Image.RenderTransform>
        </Image>
    </Grid>
</UserControl>