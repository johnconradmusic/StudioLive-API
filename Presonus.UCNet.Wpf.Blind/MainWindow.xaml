<Window x:Class="Presonus.UCNet.Wpf.Blind.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:api1="clr-namespace:Presonus.UCNet.Api"
        xmlns:converters="clr-namespace:Presonus.UCNet.Api.Converters;assembly=Presonus.UCNet.Api"
        xmlns:channels="clr-namespace:Presonus.UCNet.Api.Models.Channels;assembly=Presonus.UCNet.Api" xmlns:usercontrols="clr-namespace:Presonus.UCNet.Wpf.Blind.UserControls"
        d:DataContext="{d:DesignInstance Type=api1:BlindViewModel}"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Background="DarkGray">
    <Window.Resources>
        <converters:HexStringToSolidColorBrushConverter x:Key="HexStringToSolidColorBrushConverter" />
        <converters:VisibilityConverter x:Key="VisibilityConverter" />
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        <converters:FloatToIndexConverter x:Key="FloatToIndexConverter" x:Shared="False" />
    </Window.Resources>
    <Grid>
        <TreeView  ItemsSource="{Binding AllChannels}">
            <TreeView.Resources>
                <DataTemplate DataType="{x:Type channels:MicLineInput}">
                    <TreeViewItem IsTabStop="True" Header="{Binding username}">
                        <usercontrols:TreeViewFloat Header="Volume" Value="{Binding volume}" Minimum="0" Maximum="1"/>
                    </TreeViewItem>
                </DataTemplate>
                <DataTemplate DataType="{x:Type channels:OutputDACBus}">
                    <StackPanel Orientation="Horizontal" Margin="5">
                        <!-- Define the visual representation of an OutputDAC object here -->
                    </StackPanel>
                </DataTemplate>
            </TreeView.Resources>
        </TreeView>
    </Grid>
</Window>