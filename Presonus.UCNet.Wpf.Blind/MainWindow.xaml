<Window x:Class="Presonus.UCNet.Wpf.Blind.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:api1="clr-namespace:Presonus.UCNet.Api"
        xmlns:converters="clr-namespace:Presonus.UCNet.Api.Converters;assembly=Presonus.UCNet.Api"
        xmlns:channels="clr-namespace:Presonus.UCNet.Api.Models.Channels;assembly=Presonus.UCNet.Api" xmlns:usercontrols="clr-namespace:Presonus.UCNet.Wpf.Blind.UserControls"
        d:DataContext="{d:DesignInstance Type=api1:BlindViewModel}"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Background="DarkGray">
    <Window.Resources>
        <converters:HexStringToSolidColorBrushConverter x:Key="HexStringToSolidColorBrushConverter" />
        <converters:VisibilityConverter x:Key="VisibilityConverter" />
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        <converters:FloatToIndexConverter x:Key="FloatToIndexConverter" x:Shared="False" />
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="20"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <ListBox x:Name="ChannelSelector" Grid.Row="1" Width="800" ItemsSource="{Binding AllChannels}" HorizontalContentAlignment="Left" VerticalAlignment="Top"
         SelectionMode="Single" 
         ScrollViewer.HorizontalScrollBarVisibility="Disabled" >
            <ListBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <StackPanel Width="40" Height="20" Orientation="Horizontal"/>
                </ItemsPanelTemplate>
            </ListBox.ItemsPanel>
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Border>
                        <TextBlock Text="{Binding chnum}"/>
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>
            <ListBox.ContextMenu>
                <ContextMenu DataContext="{Binding ElementName=ChannelSelector, Path=SelectedItem}">
                    <MenuItem IsCheckable="True" Header="Mute" IsChecked="{Binding mute}"/>
                    <MenuItem IsCheckable="True" Header="Phantom" IsChecked="{Binding phantom}"/>
                    <MenuItem IsCheckable="True" Header="Phase Invert" IsChecked="{Binding polarity}"/>
                </ContextMenu>
            </ListBox.ContextMenu>
        </ListBox>
        <StackPanel DataContext="{Binding ElementName=ChannelSelector, Path=SelectedItem}" Grid.Row="2" Orientation="Horizontal">
            <usercontrols:NumericUpDown Value="{Binding volume}" Curve="LinearToVolume" Min="-84" Max="10" Unit="DB"/>
            <usercontrols:NumericUpDown Value="{Binding pan}" Curve="Linear" Min="0" Max="1" Unit="NONE"/>
            <usercontrols:NumericUpDown Value="{Binding preampgain}" Curve="Linear" Min="0" Max="60" Unit="DB"/>
        </StackPanel>
    </Grid>
</Window>